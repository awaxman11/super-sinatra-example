<form action='/team' method="POST">
  <label>Team Name:</label>
  <input type="text" name="team[name]">
  <br>

  <label>Team Motto:</label>
  <input type="text" name="team[motto]">
  <br><br>

  <% 3.times do |num| %>
    <h2>Hero <%= num+1 %></h2>

    <label>Hero's Name:</label>
    <input type="text" name="team[members][][name]">
    <br>

    <label>Hero's Power:</label>
    <input type="text" name="team[members][][power]">
    <br>

    <label>Hero's Biography:</label>
    <input type="text" name="team[members][][biography]">
    <br>

  <% end %>

  <button>Submit</button>


</form>